<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/popup"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CustomerName"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:text="Dahaval Varia"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/CustomerId"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginLeft="50dp"
            android:text="Dahaval Varia"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/CustomerCall"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/CustomerCancle"
            android:layout_width="63dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cross" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cow"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginRight="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buffelow"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Other"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/CustomerMorning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning"
                />
            <RadioButton
                android:id="@+id/CustomerEvening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="evening" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/Customer_Morning_Cow"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/Customer_Morning_Buffelow"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/Customer_Morning_Other"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp">

                <EditText
                    android:id="@+id/Customer_Evening_Cow"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/Customer_Evening_Buffelow"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:layout_marginLeft="40dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/Customer_Evening_Other"
                    android:layout_width="42dp"
                    android:layout_height="25dp"
                    android:background="@drawable/quantity"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"/>
            </LinearLayout>
            <Switch
                android:id="@+id/Customer_Vacation_Mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vacation_mode"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/CustomerAccept"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Accept"
            android:background="@drawable/button"
            android:textColor="@color/white" android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/CustomerDenied"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:text="Denied"
            android:background="@drawable/button"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
